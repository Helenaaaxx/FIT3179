{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Deaths caused by HIV/AIDS (2019)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://github.com/Helenaaaxx/FIT3179/blob/main/week%209%20homework/HIV_AIDS_2019_dataset.csv"
        },
        "key": "Country",
        "fields": ["Percentage"]
      }
    },
    {"calculate": "datum.Active + 0.1", "as": "Active Cases"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Active Cases",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Active", "type": "quantitative"}
    ]
  },
  "config": {}
}